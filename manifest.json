{
  "manifest_version": 2,

  "name": "Highlighter",
  "version": "1.0",
  "description": "Changes the way highlighted text appears.",

  "browser_action": {
    "default_icon": "icon-19x19.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"]
  }]
}